@import "variables.styl"

input-reset-css()
  -webkit-appearance: none;
  font-family inherit
  outline 0
  border 0

description-text()
  font-weight 400
  font-size 14px
  line-height 16px

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family 'Ubuntu', sans-serif

.page
  background color-secondary--theme-light
  &--theme--dark
    background color-secondary--theme-dark

.page-inner
  background-color color-text-100--theme-light
  .page--theme--dark &
    background-color color-text-100--theme-dark
  &--wave
    background-image url("../images/img_wave.png")
    background-repeat no-repeat
    background-position center bottom
    background-size 100%
    .page--theme--dark &
      background-image url("../images/img_wave--dark-theme.png")
  &--full-page
    min-height 1024px
    width 100%
    display flex
    flex-direction column

.frame
  padding 32px

.container
  width 100%
  height 100%
  max-width 986px
  margin 0 auto

@media screen and (min-width: 1024px)
  .container
    transform translateX(5px)

.title
  font-weight 500
  font-size 28px
  line-height 32px
  color color-text-800--theme-light
  .page--theme--dark &
    color color-text-800--theme-dark

.description
  description-text()
  color color-text-500--theme-light
  .page--theme--dark &
    color color-text-500--theme-dark

.headline
  &__description
    margin-top 4px

.headline--margin-bottom
  margin-bottom 32px

.form-inner--flex
  display flex

.form__form-inner
  margin-bottom 24px

.input-title
  display inline-block
  description-text()
  color color-text-500--theme-light
  .page--theme--dark &
    color color-text-500--theme-dark
  &--cut
    width 120px
    margin-right 4px
  &--middle
    padding-top 8px

.input
  input-reset-css()
  description-text()
  width 196px
  background color-text-200--theme-light
  border 1px solid color-text-300--theme-light
  color color-text-800--theme-light
  border-radius 6px
  height 32px
  padding 8px
  transition 0.2s
  position relative
  &:placeholder
    font-family inherit
    font-weight 300
    font-size 14px
    line-height 16px
    color color-text-300--theme-light
    .page--theme--dark &
      color color-text-300--theme-dark
  .page--theme--dark &
    color color-text-800--theme-dark
    background-color color-text-200--theme-dark
    border-color color-text-300--theme-dark
  &--select
    padding-right 32px
  &--cut
    width 50px
  &:hover
    box-shadow: inset 0 0 0 100px rgba(0, 0, 0, 0.2)
  &:focus
    border-color color-primary-500--theme-light
    .page--theme--dark &
      border-color color-primary-500--theme-dark

.input-frame
  &--flex
    display flex
    align-items center
  &--line
    position relative
    margin-right 24px
    &:after
      content '-'
      width 8px
      text-align center
      description-text()
      color color-text-500--theme-light
      position: absolute;
      right -8px
      top 8px
      transform translateX(100%)
      .page--theme--dark &
        color color-text-500--theme-dark
    &:last-chilg:after
      display none

.input-container
  position relative
  &--flex
    display flex
    align-items center
  &--top
    padding-top 4px

.input-description
  font-weight 400
  font-size 11px
  line-height 13px
  color color-text-300--theme-light
  position absolute
  bottom -4px
  transform translateY(100%)
  .page--theme--dark &
    color color-text-300--theme-dark
  &--transparent
    opacity 0
    visibility hidden

.radio-label
  font-weight 400
  font-size 14px
  line-height 24px
  color color-text-500--theme-light
  margin-left 7px
  cursor pointer
  .page--theme--dark &
    color color-text-500--theme-dark

.radio-input
  width 18px
  height 18px
  border 2px solid color-text-500--theme-light
  border-radius 100%
  position relative
  cursor pointer
  .page--theme--dark &
    border-color color-text-500--theme-dark
  &:after
    content ''
    width 10px
    height 10px
    border-radius 100%
    background none
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.radio
  display none
  &:checked ~ .radio-label
    color color-text-800--theme-light
    .page--theme--dark &
      color color-text-800--theme-dark
  &:checked ~ .radio-input
    border-color color-primary-500--theme-light
    .page--theme--dark &
      border-color color-primary-500--theme-dark
  &:checked ~ .radio-input:after
    background color-primary-500--theme-light
    .page--theme--dark &
      background color-primary-500--theme-dark

.input-frame--list
  margin-bottom 8px

.button
  font-family inherit
  border-radius 3px
  border 1px solid transparent
  font-weight 500
  font-size 14px
  line-height 24px
  padding 4px 8px
  transition 0.2s
  cursor pointer
  background none
  &:hover
    box-shadow: inset 0 0 0 100px rgba(0, 0, 0, 0.2);
  &--full
    color color-text-100--theme-light
    background-color color-primary-500--theme-light
    &:focus
      border-color color-primary-100--theme-light
    .page--theme--dark &
      color color-text-100--theme-dark
      background-color color-primary-500--theme-dark
      &:focus
        border-color color-primary-100--theme-dark
  &--link
    color color-primary-700--theme-light
    .page--theme--dark &
      color color-primary-700--theme-dark
    &:focus
      border-color color-primary-500--theme-light
    .page--theme--dark &
      border-color color-primary-500--theme-dark
  &--margin-right
    margin-right 16px

.footnote
  font-family 'Montserrat', sans-serif
  font-weight 400
  font-size 14px
  line-height 20px
  text-align center
  color color-text-500--theme-light
  min-height 256px
  width 100%
  display flex
  flex-direction column
  justify-content flex-end
  flex 1
  .page--theme--dark &
    color color-text-500--theme-dark

.footnote__text
  padding 24px 32px

.link
  font-family 'Montserrat', sans-serif
  font-weight 400
  font-size 14px
  line-height 20px
  color color-primary-700--theme-light
  text-decoration underline
  .page--theme--dark &
    color color-primary-700--theme-dark
  &--in-text
    margin 0 8px

// select
.jq-selectbox__select
  width 196px
  background-color color-text-200--theme-light
  border 1px solid color-text-300--theme-light
  border-radius 6px
  height 32px
  padding 7px 8px 9px
  transition 0.2s
  position relative
  cursor pointer
  .page--theme--dark &
    background-color color-text-200--theme-dark
    border-color color-text-300--theme-dark
  .select.opened &
    border-color color-primary-500--theme-light
    .page--theme--dark &
      border-color color-primary-500--theme-dark
  &:hover
    box-shadow: inset 0 0 0 100px rgba(0, 0, 0, 0.2);

.jq-selectbox__select-text
  description-text()
  width 100%(!important)
  color color-text-800--theme-light
  .page--theme--dark &
    color color-text-800--theme-dark

.jq-selectbox__trigger
  width 24px
  height 24px
  background url("../images/ic_select.svg") no-repeat center / 100%
  position absolute
  top 3px
  right 7px
  .page--theme--dark &
    background-image url("../images/ic_select--dark-theme.svg")
  .select.opened &
    background-image url("../images/ic_select--active.svg")
    .page--theme--dark &
      background-image url("../images/ic_select--active--dark-theme.svg")


.jq-selectbox__dropdown
  background color-secondary-500--theme-light
  box-shadow 0 4px 4px rgba(0, 0, 0, 0.25)
  border-radius 6px
  width 100%
  margin-top 1px
  overflow hidden
  .page--theme--dark &
    background color-secondary-500--theme-dark
  li
    font-weight 400
    font-size 14px
    line-height 16px
    padding 8px
    color color-text-800--theme-light
    cursor pointer
    transition 0.2s
    .page--theme--dark &
      color color-text-800--theme-dark
    &:hover,
    &.selected
      background-color color-text-200--theme-light
      .page--theme--dark &
        background-color color-text-200--theme-dark

